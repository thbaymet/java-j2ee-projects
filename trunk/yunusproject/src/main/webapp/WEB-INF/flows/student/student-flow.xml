<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd" >
	
	<var name="student" class="com.yunus.org.domain.StudentEntity"/>
	
	<view-state id="welcome" view="studentManagement.xhtml" model="student">
		<transition on="cancelAddStudent" to="finish"></transition>
		<transition on="confirmAddStudent" to="finish">
			<evaluate expression="studentService.createStudent(student)"></evaluate>
		</transition>
	</view-state>
	
	<view-state id="signUp" view="addEditForm.xhtml">
	
	</view-state>

	<end-state id="finish" view="externalRedirect:account"></end-state>
	
</flow>